# REQUIRED: MongoDB connection string (get from MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=YourApp

# Server port
PORT=5000

# Environment
NODE_ENV=production

# Auto-seed events and news on first run? (true/false)
AUTO_SEED=true

# Admin password (default: admin123 - CHANGE THIS!)
ADMIN_PASSWORD=admin123

# JWT Secret (optional - auto-generated if not set)
JWT_SECRET=
